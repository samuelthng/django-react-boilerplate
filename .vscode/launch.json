{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "React Bundler [Hot Reload]",
            "program": "${workspaceFolder}/react/server.js"
        },
        {
            "name": "Django Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/django/manage.py",
            "console": "integratedTerminal",
            "args": [
                "runserver",
                "--noreload",
                "--nothreading"
            ],
            "django": true
        },
        {
            "name": "Django Reload",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/django/manage.py",
            "console": "integratedTerminal",
            "args": [
                "runserver"
            ],
            "django": true
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Chrome",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}/django/"
        },

    ]
}